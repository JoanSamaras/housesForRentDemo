{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": "tsconfig.json"
    },
    "plugins": ["@typescript-eslint"],
    "extends": [
        "airbnb-typescript",
        "airbnb/hooks",
        "plugin:@typescript-eslint/recommended",
        "plugin:@typescript-eslint/recommended-requiring-type-checking"
    ],
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [
                    ".js",
                    ".jsx",
                    ".ts",
                    ".tsx"
                ]
            }
        }
    },
    "rules": {
        "prettier/prettier": 0,
        "quotes": [
            "error",
            "single"
        ],
        "indent": [
            "error",
            4,
            {
                "ignoredNodes": [
                    "JSXElement", 
                    "JSXElement > *", 
                    "JSXAttribute", 
                    "JSXIdentifier", 
                    "JSXNamespacedName", 
                    "JSXMemberExpression", 
                    "JSXSpreadAttribute", 
                    "JSXExpressionContainer", 
                    "JSXOpeningElement", 
                    "JSXClosingElement", 
                    "JSXText", 
                    "JSXEmptyExpression", 
                    "JSXSpreadChild"
                ]
            }
        ],
        "@typescript-eslint/indent": [
            "error",
            4
        ],
        "react/jsx-indent": [
            "error",
            4
        ],
        "prefer-const": 1,
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "template-curly-spacing": [
            "error",
            "always"
        ],
        "react/jsx-curly-spacing": [
            "error",
            "always"
        ],
        "padding-line-between-statements": [
            "error",
            {
                "blankLine": "always",
                "prev": [
                    "const",
                    "let",
                    "var"
                ],
                "next": "*"
            },
            {
                "blankLine": "any",
                "prev": [
                    "const",
                    "let",
                    "var"
                ],
                "next": [
                    "const",
                    "let",
                    "var"
                ]
            }
        ],
        "object-curly-newline": [
            "error",
            {
                "ObjectExpression": "always",
                "ObjectPattern": {
                    "multiline": true
                },
                "ImportDeclaration": "never",
                "ExportDeclaration": {
                    "multiline": true,
                    "minProperties": 3
                }
            }
        ],
        "space-in-parens": [
            "error",
            "always"
        ],
        "array-bracket-spacing": [
            "error",
            "always"
        ],
        "no-console": "off",
        "@typescript-eslint/no-redeclare": "off",
        "@typescript-eslint/no-shadow": [
            "error",
            { "builtinGlobals": false, "hoist": "functions", "allow": [] }
        ]
    }
}